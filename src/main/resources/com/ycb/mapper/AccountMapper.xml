<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ycb.mapper.AccountMapper">

    <select id="getAccountVOById" resultType="com.ycb.entity.vo.response.AccountVO">
        select *
        from `pet-adoption`.account a
                 join `pet-adoption`.picture p on p.pic_id = a.picture_id
        where a.account_id = #{id}
    </select>

    <update id="updateAccountById">
        update `pet-adoption`.account
        <set>
            <if test="location != null">
                location = #{location},
            </if>
            <if test="nikeName != null">
                nike_name = #{nikeName},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="signature != null">
                signature = #{signature},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
        </set>
        where account_id = #{id}
    </update>

    <update id="updateAccPic">
        update `pet-adoption`.account
        set picture_id = #{pictureId}
        where account_id = #{accId}
    </update>
</mapper>