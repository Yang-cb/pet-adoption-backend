<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ycb.mapper.AccountMapper">
    <resultMap type="com.ycb.entity.vo.response.AccountVO" id="accountVO">
        <id column="pic_data" property="picData" javaType="byte[]" jdbcType="BLOB" typeHandler="org.apache.ibatis.type.BlobTypeHandler"/>
    </resultMap>

    <select id="getAccountVOByUsername" resultMap="accountVO">
        select *
        from `pet-adoption`.account a
                 join `pet-adoption`.picture p on p.id = a.picture_id
        where username = #{username}
    </select>

    <update id="updateAccountByUsername">
        update `pet-adoption`.account
        <set>
            <if test="location != null">
                location = #{location},
            </if>
            <if test="nikeName != null">
                nike_name = #{nikeName},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="signature != null">
                signature = #{signature},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
        </set>
        where username = #{username}
    </update>
</mapper>