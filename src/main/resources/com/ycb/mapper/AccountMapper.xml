<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ycb.mapper.AccountMapper">
    <resultMap type="com.ycb.entity.vo.response.AccountVO" id="accountVO">
        <id column="id" property="id"/>
        <id column="username" property="username"/>
        <id column="email" property="email"/>
        <id column="pic_data" property="picData" javaType="byte[]" jdbcType="BLOB" typeHandler="org.apache.ibatis.type.BlobTypeHandler"/>
    </resultMap>

    <select id="getAccountVOByUsername" resultMap="accountVO">
        select a.id, a.username, a.email, p.pic_data
        from `pet-adoption`.account a
                 join `pet-adoption`.picture p on p.id = a.picture_id
        where username = #{username}
    </select>
</mapper>